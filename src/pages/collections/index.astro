---
import Layout from '../../layouts/Layout.astro';
import { Schema } from 'astro-seo-schema';
import { getComputedCollections } from '../../lib/collections';
import { getAllEpisodes, getShowInfo } from '../../lib/rss';

const show = await getShowInfo();
const allEpisodes = await getAllEpisodes();
const collections = await getComputedCollections();
const title = `Collections - ${show.title}`;
const canonicalURL = new URL('/collections', Astro.url);

// For each collection, get the 4 latest episodes
const collectionsWithEpisodes = collections.map((collection) => {
  const collectionEpisodes = allEpisodes
    .filter((episode) => collection.episodeSlugs.includes(episode.episodeSlug))
    .sort((a, b) => b.published - a.published)
    .slice(0, 4); // Get 4 latest episodes

  return {
    ...collection,
    latestEpisodes: collectionEpisodes
  };
});

// Calculate total episode count
const totalEpisodeCount = collections.reduce(
  (sum, collection) => sum + collection.episodeSlugs.length,
  0
);

// Generate SEO-optimized description
const collectionTopics = collections.map((c) => c.title).join(', ');
const description = `Explore curated podcast collections covering ${collectionTopics}. Browse ${collections.length} topic-based collections featuring ${totalEpisodeCount} episodes from ${show.title}.`;

// Generate keywords from collection titles
const keywords = collections
  .map((c) => c.title.toLowerCase())
  .concat(['podcast collections', 'curated episodes', show.title.toLowerCase()])
  .join(', ');
---

<Layout title={title} canonicalURL={canonicalURL} description={description}>
  <!-- Enhanced Meta Tags -->
  <meta slot="head" name="keywords" content={keywords} />
  <meta slot="head" property="og:type" content="website" />
  <meta slot="head" name="twitter:card" content="summary_large_image" />

  <!-- Structured Data: CollectionPage -->
  <Schema
    slot="head"
    item={{
      '@context': 'https://schema.org',
      '@type': 'CollectionPage',
      name: title,
      description: description,
      url: canonicalURL.toString(),
      about: {
        '@type': 'PodcastSeries',
        name: show.title,
        url: Astro.site?.toString()
      },
      isPartOf: {
        '@type': 'WebSite',
        name: show.title,
        url: Astro.site?.toString()
      }
    }}
  />

  <!-- Structured Data: ItemList of Collections -->
  <Schema
    slot="head"
    item={{
      '@context': 'https://schema.org',
      '@type': 'ItemList',
      name: 'Podcast Collections',
      numberOfItems: collections.length,
      itemListElement: collections.map((collection, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: collection.title,
        description: collection.description,
        url: new URL(`/collections/${collection.slug}`, Astro.url).toString()
      }))
    }}
  />

  <!-- Structured Data: BreadcrumbList -->
  <Schema
    slot="head"
    item={{
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: Astro.site?.toString()
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Collections',
          item: canonicalURL.toString()
        }
      ]
    }}
  />
  <div class="relative z-10 px-8 lg:px-18">
    <h1 class="text-light-text-heading text-4xl font-bold dark:text-white">
      Podcast Collections
    </h1>

    <p class="mt-4 text-lg">
      Explore {collections.length} curated collections featuring {totalEpisodeCount} episodes from {show.title}. Browse episodes organized by topic including {collections.slice(0, 3).map(c => c.title).join(', ')}, and more.
    </p>

    <h2 class="text-light-text-heading mt-12 mb-8 text-2xl font-bold dark:text-white">
      Browse by Topic
    </h2>

    <div class="collections-grid grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {collectionsWithEpisodes.map((collection) => (
        <a
          href={`/collections/${collection.slug}`}
          class="group relative grid overflow-hidden rounded-lg bg-light-card dark:bg-dark-card transition-transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:focus:ring-offset-dark-background"
          style="grid-template-rows: subgrid; grid-row: auto / span 3;"
          aria-label={`View ${collection.title} collection with ${collection.episodeSlugs.length} episodes`}
        >
          <div
            class="pointer-events-none absolute inset-0 rounded-lg opacity-30 dark:opacity-20"
            style="background: radial-gradient(77% 77% at 50% 0%, rgba(237, 236, 252, 0.4) 0%, rgba(237, 236, 252, 0) 100%);"
            aria-hidden="true"
          ></div>
          <div
            class="pointer-events-none absolute inset-0 rounded-lg opacity-0 dark:opacity-20"
            style="background: radial-gradient(77% 77% at 50% 0%, rgba(88, 105, 132, 0.3) 0%, rgba(88, 105, 132, 0) 100%);"
            aria-hidden="true"
          ></div>
          <div class="aspect-1 w-full overflow-hidden bg-gray-200 dark:bg-gray-800">
            {collection.latestEpisodes.length > 0 ? (
              <div class="grid h-full w-full grid-cols-2">
                {collection.latestEpisodes.map((episode) => (
                  <img
                    src={episode.episodeThumbnail ?? show.image}
                    alt={`${episode.title} - ${show.title} episode`}
                    class="h-full w-full object-cover transition-transform group-hover:scale-105"
                    loading="lazy"
                    width="200"
                    height="200"
                  />
                ))}
              </div>
            ) : (
              <div class="flex h-full w-full items-center justify-center">
                <span class="text-sm text-gray-500">No episodes</span>
              </div>
            )}
          </div>
          <div class="px-6">
            <h2 class="text-light-text-heading text-xl font-bold dark:text-white">
              {collection.title}
            </h2>
            {collection.description && (
              <p class="mt-2 text-sm">{collection.description}</p>
            )}
          </div>
          <div class="px-6 pb-6">
            <p class="text-sm font-medium text-cyan-600 dark:text-cyan-400">
              {collection.episodeSlugs.length}{' '}
              {collection.episodeSlugs.length === 1 ? 'episode' : 'episodes'}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
